<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="BonchMarkBlazor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BonchMarkBlazor"
    xmlns:xpages="clr-namespace:BonchMarkBlazor.XamlPages"
    xmlns:xwpages="clr-namespace:BonchMarkBlazor.XamlPages.WeekPages"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="#FAE6C3"
    Shell.TabBarForegroundColor="#FF000000"
    Shell.TabBarTitleColor="#f5841f"
    Shell.TabBarUnselectedColor="#5C5C5C">

    <TabBar>
        <Tab Icon="house.png">
            <ShellContent ContentTemplate="{DataTemplate xpages:Main}" Icon="house.png" />
        </Tab>
        <Tab
            x:Name="HideElement"
            Icon="clock.png"
            IsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate xwpages:Monday}" />
            <ShellContent ContentTemplate="{DataTemplate xwpages:Tuesday}" />
            <ShellContent ContentTemplate="{DataTemplate xwpages:Wednesday}" />
            <ShellContent ContentTemplate="{DataTemplate xwpages:Thursday}" />
            <ShellContent ContentTemplate="{DataTemplate xwpages:Friday}" />
            <ShellContent ContentTemplate="{DataTemplate xwpages:Saturday}" />
        </Tab>
    </TabBar>


</Shell>