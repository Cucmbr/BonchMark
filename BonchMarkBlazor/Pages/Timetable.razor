                    @if (App.Monday != null)
                    {
                        for (int i = 0; i < App.Monday.Classes.Count; i++)
                        {
                            ChangeColor(App.Monday.Classes[i]);
                            <div class="class_item">
                                <div class="class_number" style="@color_style">@App.Monday.Classes[i].Time[0]</div>
                                <div class="card_container">
                                    <div class="class_label" style="@color_style">@App.Monday.Classes[i].Type[0] | @App.Monday.Classes[i].Time[1]</div>
                                    <div class="class_card">
                                        <div class="class_name">@App.Monday.Classes[i].Name</div>
                                        <div class="class_teacher_place">@App.Monday.Classes[i].Teacher <b>@App.Monday.Classes[i].Place</b></div>
                                    </div>
                                </div>
                            </div>
                        }
